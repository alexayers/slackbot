{
    "compilerOptions": {
        "baseUrl": ".",
        "lib": [
            "es2017"
        ],
        "module": "commonjs",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "target": "es2017",
        "outDir": ".build"
    },
    "exclude": [
        "node_modules"
    ]
}